# ----- PostgreSQL (Container) -----
POSTGRES_DB=myrush
POSTGRES_USER=myrush
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD

# ----- JWT / Auth -----
SECRET_KEY=myrush_hardcoded_secret_key_2026
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ----- AWS S3 (Media Storage) -----
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2
S3_BUCKET_NAME=
S3_BASE_URL=

# ----- Backend API Base URL -----
API_BASE_URL=https://api-staging.myrush.in

# ----- Razorpay (Payments) -----
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=

# ----- SMTP (Email) -----
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
ACADEMY_ADMIN_EMAIL=
ERROR_ALERT_RECIPIENTS=
ERROR_ALERT_SENDER=

# ----- Exotel / WhatsApp -----
EXOTEL_API_KEY=
EXOTEL_API_TOKEN=
EXOTEL_ACCOUNT_SID=
EXOTEL_SUBDOMAIN=
EXOTEL_WHATSAPP_NUMBER=

# ----- Frontend Build Args -----
VITE_ADMIN_API_URL=https://api-staging.myrush.in/api/admin
VITE_USER_API_URL=https://api-staging.myrush.in/api/user
VITE_GOOGLE_MAPS_API_KEY=
VITE_GEMINI_API_KEY=

# ----- SSL / Let's Encrypt -----
LETSENCRYPT_EMAIL=your-email@example.com

# ----- Environment -----
ENVIRONMENT=production
